#!/usr/bin/env sh

# args :
#
#   --reports\=n --output-format\=text \
#   --msg-template\=\{path\}:\{line\}:\{column\}:\{C\}:\{symbol\}:\{msg\} \
#   --rcfile\=/local/path/.pylintrc /local/path/*.py

cmd="$PROJECT_PYLINT_CMD"

for i in "$@"; do
    case "$i" in
        *\'*)
            i=$(printf "%s" "$i")
            ;;
        *=*)
            i=$(printf "%s" "$i" | sed -e "s/=\(.*\)/=\"\1\"/g")
            ;;
        *$PROJECT_LOCAL_PATH*)
            i=$(printf "%s" "$i" | \
                    sed -e "s|$PROJECT_LOCAL_PATH|$PROJECT_REMOTE_PATH|g")
            ;;
        *) : ;;
    esac
    cmd="$cmd $i"
done

ssh "$HOST_USER@$HOST_IP" -p "$HOST_PORT" -tt "$cmd" > /tmp/pylint.out

result="$(grep "$PROJECT_REMOTE_PATH" /tmp/pylint.out)"

if [ ! -z "$result" ]; then
    echo "$result" | sed -e "s|$PROJECT_REMOTE_PATH|$PROJECT_LOCAL_PATH|g"
    exit 0
else
    cat /tmp/pylint.out
    exit 1
fi
